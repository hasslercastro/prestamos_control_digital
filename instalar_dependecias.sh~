#!/bin/bash

echo "############################################"
for i in `seq 1 50000`;
do
    continue
done

echo "#     SISTEMA DE CONTROL DE PRESTAMOS      #"
for i in `seq 1 50000`;
do
    continue
done

echo "#      LABORATORIO DE CONTROL DIGITAL      #"
for i in `seq 1 50000`;
do
    continue
done

echo "#            UNIVERSIDAD EAFIT             # "
for i in `seq 1 50000`;
do
    continue
done

echo "#JOSHUA SANCHEZ-CAMILO VILLA-HASSLER CASTRO# "
for i in `seq 1 50000`;
do
    continue
done

echo "#              EDWIN RENGIFO               # "
for i in `seq 1 50000`;
do
    continue
done

echo "############################################"
for i in `seq 1 500000`;
do
    continue
done


echo "#######################################"
echo "#          Instalando NodeJS          #"
echo "#######################################"
for i in `seq 1 500000`;
do
    continue
done

sudo apt-get -y remove nodejs
sudo curl -sL https://deb.nodesource.com/setup_6.x | sudo -E bash -
sudo apt-get update
sudo apt-get -y install nodejs

echo "#######################################"
echo "#          Preparando entorno         #"
echo "#######################################"
for i in `seq 1 500000`;
do
    continue
done

sudo apt-get -y remove python-pip
sudo easy_install pip

echo "#######################################"
echo "#      Instalando dependencias        #"
echo "#######################################"
echo "                              "
echo "Esto tardara unos minutos"
for i in `seq 1 500000`;
do
    continue
done

sudo npm install

echo "#######################################"
echo "#          Instalando mongodb         #"
echo "#######################################"
for i in `seq 1 500000`;
do
    continue
done

sudo apt-get -y install mongodb

echo "#######################################"
echo "#         Instalando cordova          #"
echo "#######################################"
for i in `seq 1 500000`;
do
    continue
done

sudo npm install -g cordova

echo "#######################################"
echo "#          Instalando ionic           #"
echo "#######################################"
echo "                              "
echo "Esto tardara unos minutos"
for i in `seq 1 500000`;
do
    continue
done

sudo npm install -g ionic
sudo npm rebuild node-sass

echo "#############################################"
echo "#     Instalando dependencias de python     #"
echo "#############################################"
for i in `seq 1 500000`;
do
    continue
done

sudo pip install flask_cors
sudo pip install flask_pymongo





